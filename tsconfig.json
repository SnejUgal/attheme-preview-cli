{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "outDir": "./dist/",
    "types": [
      "node"
    ]
  }
}
